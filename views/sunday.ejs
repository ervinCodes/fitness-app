  <!-- Button trigger modal -->
  <button
    type="button"
    class="btn btn-primary"
    data-bs-toggle="modal"
    data-bs-target="#exampleModalCenter"
  >
    Add Workout
  </button>

  <!-- Modal -->
  <div
    class="modal fade"
    id="exampleModalCenter"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header d-flex justify-content-center">
          <h5 class="modal-title" id="exampleModalLongTitle">Add Workout</h5>
        </div>
        <div class="modal-body">
          <!-- Form -->
          <form action="/post/createSundayWorkout" method="POST">
            <div class="row mb-3 d-flex justify-content-center">
              <!-- Workout Title -->
              <div class="col-10">
                <label for="title" class="form-label">Workout</label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                />
              </div>
            </div>
            <div class="row d-flex justify-content-center">
              <!-- Sets -->
              <div class="col-5 form-group mb-3">
                <label for="sets" class="form-label">Sets</label>
                <input type="text" class="form-control" id="sets" name="sets" />
              </div>
              <!-- Repts -->
              <div class="col-5 form-group mb-3">
                <label for="reps" class="form-label">Reps</label>
                <input type="text" class="form-control" id="reps" name="reps" />
              </div>
            </div>
            <div class="row d-flex justify-content-center">
              <!-- Weight -->
              <div class="col-5 form-group mb-3">
                <label for="weight" class="form-label">Weight</label>
                <input
                  type="text"
                  class="form-control"
                  id="weight"
                  name="weight"
                />
              </div>
              <!-- PR -->
              <div class="col-5 form-group mb-3">
                <label for="personalRecord" class="form-label">PR</label>
                <input
                  type="text"
                  class="form-control"
                  id="personalRecord"
                  name="personalRecord"
                />
              </div>
            </div>

            <!-- <div class="mb-3">
          <label for="caption" class="form-label">Caption</label>
          <textarea
